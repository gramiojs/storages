{
	"compilerOptions": {
		"lib": ["ESNext"],
		"target": "ES2022",
		"module": "Preserve",
		"moduleDetection": "force",

		/* Bundler mode */
		"moduleResolution": "bundler",
		/* Linting */
		"types": ["bun-types"],
		"skipLibCheck": true,
		"strict": true,
		"noFallthroughCasesInSwitch": true,
		"forceConsistentCasingInFileNames": true,
		"esModuleInterop": true,
		"noEmit": true
	},
	"include": ["src", "tests"]
}
