{
	"name": "@gramio/storage-sqlite",
	"version": "1.0.0",
	"description": "SQLite Storage for GramIO (supports Bun and Node.js)",
	"type": "module",
	"exports": {
		".": {
			"bun": {
				"types": "./dist/bun.d.ts",
				"default": "./dist/bun.js"
			},
			"import": {
				"types": "./dist/node.d.ts",
				"default": "./dist/node.js"
			},
			"require": {
				"types": "./dist/node.d.cts",
				"default": "./dist/node.cjs"
			}
		}
	},
	"homepage": "https://github.com/gramiojs/storages",
	"readme": "https://gramio.dev/storages",
	"scripts": {
		"prepublishOnly": "bunx tsc && bun test && bunx pkgroll"
	},
	"keywords": ["gramio", "gramio-storage", "storage", "sqlite"],
	"license": "MIT",
	"devDependencies": {
		"@types/bun": "^1.2.15",
		"@types/node": ">=22.13.0",
		"pkgroll": "^2.12.1",
		"typescript": "^5.8.2"
	},
	"files": ["dist"],
	"dependencies": {
		"@gramio/storage": "^1.0.0"
	}
}
